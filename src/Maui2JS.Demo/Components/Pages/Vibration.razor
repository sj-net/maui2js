@page "/vibration"

<h1>Vibration</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <label for="vibrationTime">Time (in seconds):</label>
            <input type="number" id="vibrationTime" class="form-control" min="1" max="5" value="3" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <button class="btn btn-primary" onclick="startVibration()">Start</button>
            <button class="btn btn-danger" onclick="stopVibration()">Stop</button>
        </div>
    </div>
</div>

<script>
    function startVibration() {
        const vibrationTime = document.getElementById('vibrationTime').value;
        maui2js.vibration.startVibration((vibrationTime * 1000).toString());
    }

    function stopVibration() {
        maui2js.vibration.stopVibration();
    }
</script>